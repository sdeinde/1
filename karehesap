package örnek1;

import java.util.Scanner;

public class KareHesap {

	public static void main(String[] args) {
		Scanner klavye=new Scanner(System.in);
		System.out.println("Kare Kenar Uzunluğu giriniz:");
        short kareKenar=klavye.nextShort();
        int Çevre= (kareKenar*4);
        int Alan= kareKenar*kareKenar;
        System.out.println("Kenarı "+kareKenar+" olan karenin çevresi:"+Çevre);
        System.out.println("Kenarı "+kareKenar+" olan karenin alanı"+Alan);
        
        
        
	}

}
